{{#each randomBeer}}
<div class="random-div">
    <div>
        <img class="img-randombeer" src="{{this.image_url}}" alt="random_beer_img">
    </div>

    <div>
        <h3>{{this.name}}</h3>
        <p> {{this.tagline}}</p>
        <p>{{this.description}}</p>
        <h4>Food Pairing </h4>
        <ul> {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>

        <p><b>Brewers Tips: </b> {{this.brewers_tips}}</p>
    </div>
</div>
{{/each}}

